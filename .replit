language = "nix"
run = "pnpm dev"

[nix]
channel = "unstable"

[env]
XDG_CONFIG_HOME = "/home/runner/.config"


[packager]
language = "nodejs"

  [packager.features]
  packageSearch = true
  guessImports = true
  enabledForHosting = false

[languages.typescript]
pattern = "**/{*.ts,*.js,*.tsx,*.jsx}"
syntax = "typescript"

[languages.typescript.languageServer]
start = [ "typescript-language-server", "--stdio" ]
